<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:windowBackground">@color/window_background</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorHighlight">@color/color_accent</item>
    </style>

    <style name="AppTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="AppTheme.Divider.Horizontal">
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="AppTheme.Divider.Vertical">
        <item name="android:layout_width">1dp</item>
    </style>

    <style name="AppTheme.TextAppearance.Body" parent="TextAppearance.AppCompat.Body1"/>

    <style name="AppTheme.TextAppearance.Text" parent="AppTheme.TextAppearance.Body">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Text.Secondary" parent="AppTheme.TextAppearance.Text">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="AppTheme.TextAppearance.List" parent="AppTheme.TextAppearance.Body"/>

    <style name="AppTheme.TextAppearance.List.Caption" parent="AppTheme.TextAppearance.List">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.List.Content" parent="AppTheme.TextAppearance.List">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextAppearance.List.Content.Secondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
</resources>